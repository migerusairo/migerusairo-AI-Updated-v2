MDScreen:
    user_list: user_list
    name: 'Adminhome'
    MDFloatLayout:
        MDIcon:
            icon: "assets/TCUlogo.jpg"
            pos_hint: {'center_x': 0.1, 'center_y': 0.95}
        MDLabel:
            text: "Users"
            font_name: "fonts/OpenSans-Bold.ttf"
            pos_hint: {'center_x': .65, 'center_y': 0.95}
            font_size: "18sp"

    MDIconButton:
        icon: "icons/logout.png"
        pos_hint: {'center_x': 0.9, 'center_y': 0.95}
        on_release:
            app.admin_logout()
            root.manager.transition.direction = "right"

    ScrollView:
        size_hint_y: .9
        do_scroll_x: True
        do_scroll_y: True

        MDBoxLayout:
            id : user_list
            orientation: 'vertical'
            size: (root.width, root.height)
            width: self.minimum_width
            size_hint: None, None
            spacing : 10
            cols: 1

    MDBoxLayout:
        Carousel:
            size_hint: .5, .12

            MDFloatLayout:
                size_hint_x: .8

                MDLabel:
                    text: "Love"
                    font_size: "12sp"
                    font_name: "fonts/OpenSans-Italic.ttf"
                    pos_hint: {"center_x": .6,'center_y': 0.85}
                    color: rgba(135, 135, 135, 255)

                MDIconButton:
                    icon: "icons/love.png"
                    pos_hint: {"center_x": .15,'center_y': 0.4}
                    theme_text_color: "Custom"
                    md_bg_color: 255/255, 200/255, 70/255, 1
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "Love_Command-screen"

                MDLabel:
                    text: "Academic"
                    font_size: "12sp"
                    font_name: "fonts/OpenSans-Italic.ttf"
                    pos_hint: {"center_x": .77,'center_y': 0.85}
                    color: rgba(135, 135, 135, 255)

                MDIconButton:
                    icon: "icons/academic.png"
                    pos_hint: {"center_x": .38,'center_y': 0.4}
                    theme_text_color: "Custom"
                    md_bg_color: 255/255, 200/255, 70/255, 1
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "Academic_Command-screen"

                MDLabel:
                    text: "Family"
                    font_size: "12sp"
                    font_name: "fonts/OpenSans-Italic.ttf"
                    pos_hint: {"center_x": 1.05,'center_y': 0.85}
                    color: rgba(135, 135, 135, 255)

                MDIconButton:
                    icon: "icons/family.png"
                    pos_hint: {"center_x": .62,'center_y': 0.4}
                    theme_text_color: "Custom"
                    md_bg_color: 255/255, 200/255, 70/255, 1
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "Family_Command-screen"

                MDLabel:
                    text: "Financial"
                    font_size: "12sp"
                    font_name: "fonts/OpenSans-Italic.ttf"
                    pos_hint: {"center_x": 1.25,'center_y': 0.85}
                    color: rgba(135, 135, 135, 255)


                MDIconButton:
                    icon: "icons/financial.png"
                    pos_hint: {"center_x": .85,'center_y': 0.4}
                    theme_text_color: "Custom"
                    md_bg_color: 255/255, 200/255, 70/255, 1
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "Financial_Command-screen"

            MDFloatLayout:
                MDLabel:
                    md_bg_color: 0,0,0,0